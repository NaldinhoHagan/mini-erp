<%- include('../partials/head', { title }) %>
<%- include('../partials/nav') %>
<h1>Editar Cliente</h1>
<form method="post" action="/clients/<%= client.id %>/edit" class="mb-4">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <div class="mb-3"><label class="form-label">Nome</label><input name="name" class="form-control" value="<%= client.name %>" required></div>
  <div class="mb-3"><label class="form-label">E-mail</label><input name="email" type="email" class="form-control" value="<%= client.email %>"></div>
  <div class="mb-3"><label class="form-label">Telefone</label><input name="phone" class="form-control" value="<%= client.phone %>"></div>
  <button class="btn btn-primary">Salvar</button>
</form>
</div>
</body></html>
